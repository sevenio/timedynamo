<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/very_small_margin"
    android:background="@drawable/to_and_cc_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/to_and_cc_layout_height"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsMediumTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/very_small_margin"
            android:gravity="center"
            android:text="Mounika"
            android:textColor="#474848"
            android:textSize="@dimen/small_text" />

        <FrameLayout
            android:id="@+id/cancelLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_width="@dimen/remove_image_size"
                android:layout_height="@dimen/remove_image_size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/black_cross" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>