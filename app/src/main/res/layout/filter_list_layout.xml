        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/menu_bg_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margins">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/filter_name_of_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_text" />

                <View
                    android:layout_width="@dimen/textview_width"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding"
                    android:background="@color/filter_bg_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_weight="3"
                    android:visibility="gone">

                    <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                        android:id="@+id/filter_text_self"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/filter_bg_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="SELF"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/small_text" />

                    <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                        android:id="@+id/filter_text_team"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#d1d2d4"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="TEAM"
                        android:textColor="@color/text_notselected"
                        android:textSize="@dimen/small_text" />

                    <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                        android:id="@+id/filter_text_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#d1d2d4"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="All"
                        android:textColor="@color/text_notselected"
                        android:textSize="@dimen/small_text"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <!--<TextView
                android:id="@+id/text_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
