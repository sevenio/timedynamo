                    android:src="@drawable/ic_levels"
                    android:visibility="gone"/>
                </RelativeLayout>-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:visibility="gone">
            <!--<TextView
                android:id="@+id/month_name"
                android:padding="@dimen/padding"
                android:layout_width="@dimen/head_text"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/month_name"
                android:text="jan"/>-->
            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/filter_previous_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/left_arrow_image"
                    android:drawablePadding="@dimen/margins"
                    android:padding="@dimen/padding"
                    android:text="Prev"
                    android:textColor="#51c282"
                    android:textSize="@dimen/normal_text" />

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/filter_month_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding"
                    android:textColor="#f27c8b"
                    android:textSize="@dimen/normal_text" />

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/filter_next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/arrow_image"
                    android:drawablePadding="@dimen/margins"
                    android:padding="@dimen/padding"
                    android:text="Next"
                    android:textColor="#51c282"
                    android:textSize="@dimen/normal_text" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout"
                android:background="@drawable/under_line_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filter_month_caledar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_toRightOf="@+id/month"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <!--<devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:textColorNormal="#c0bfbf"
                android:visibility="gone"
                app:textColorSelected="#f394a0">

            </devs.mulham.horizontalcalendar.HorizontalCalendarView>-->
        </RelativeLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filter_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <LinearLayout

                android:id="@+id/name_of_employee_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding"
                android:gravity="center_vertical">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/name_of_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding"
                    android:background="#59729c"
                    android:drawableLeft="@drawable/profile_images"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="center"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_text" />

                <ImageView
                    android:id="@+id/close_filter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/name_of_employee"
                    android:background="#f2f1f1"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:src="@drawable/cross_image" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/employee_check_in_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding"
                android:layout_toRightOf="@+id/name_of_employee_rel"
                android:gravity="center_vertical">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/employee_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#59729c"
                    android:drawableLeft="@drawable/small_check_in_image"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="center"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_text" />

                <ImageView
                    android:id="@+id/close_filter_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/employee_check_in"
                    android:background="#f2f1f1"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:src="@drawable/cross_image" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/employee_checkout_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding"
                android:layout_toRightOf="@+id/employee_check_in_rel"
                android:gravity="center_vertical">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/employee_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#59729c"
                    android:drawableLeft="@drawable/small_checkout_image"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="center"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_text" />

                <ImageView
                    android:id="@+id/close_filter_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/employee_checkout"
                    android:background="#f2f1f1"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:src="@drawable/cross_image" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/work_time_of_employee_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding"
                android:layout_toRightOf="@+id/employee_checkout_rel"
                android:gravity="center_vertical">

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/work_time_of_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#59729c"
                    android:drawableLeft="@drawable/work_image"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="center"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_text" />

                <ImageView
                    android:id="@+id/close_filter_worktime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/work_time_of_employee"
                    android:background="#f2f1f1"
                    android:padding="@dimen/filter_lineaar_padding"
                    android:src="@drawable/cross_image" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/defult_spacing"
            android:background="@drawable/bottom_shadow_view"
            android:paddingLeft="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/searchimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search_small_blue" />

            <com.tvisha.trooptime.activity.activity.customViews.PopinRegularEditTextView
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defult_spacing"
                android:layout_toEndOf="@+id/searchimage"
                android:layout_toRightOf="@+id/searchimage"
                android:background="@null"
                android:hint="Search"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:padding="@dimen/defult_spacing"
                android:singleLine="true"
                android:textColor="@color/message_text_color"
                android:textSize="@dimen/normal_text" />

            <ImageView
                android:id="@+id/closearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/defult_spacing"
                android:src="@drawable/ic_close_new"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/filter_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filter_recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                </androidx.recyclerview.widget.RecyclerView>

                <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                    android:id="@+id/text_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="No Data"
                    android:textSize="@dimen/normal_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/filter_image_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_levels_for_main"
            android:visibility="gone"
            app:backgroundTint="@color/filter_bg_color"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal" />
    </RelativeLayout>
</LinearLayout>
