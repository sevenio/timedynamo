<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5"
        android:gravity="center"
        android:background="@color/small_tab_inactive_background_color">


        <com.tvisha.trooptime.activity.activity.customViews.PoppinsBoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="@dimen/small_text"
            android:layout_marginLeft="@dimen/small_margin"
            android:textColor="@color/ping_history_title_color"
            android:text="S.No"/>


        <com.tvisha.trooptime.activity.activity.customViews.PoppinsBoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:textColor="@color/ping_history_title_color"
            android:text="DATE"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textColor="@color/ping_history_title_color"
                android:text="LOCATION"/>
            <com.tvisha.trooptime.activity.activity.customViews.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small_text"
                android:textColor="@color/ping_history_title_color"
                android:text="(Co-ordinates)"/>

        </LinearLayout>

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsBoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:gravity="center"
            android:layout_marginRight="@dimen/small_margin"
            android:textColor="@color/ping_history_title_color"
            android:text="VIEW MAP"/>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        android:gravity="center"
       >


        <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
            android:id="@+id/serial_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="@dimen/small_text"
            android:layout_marginLeft="@dimen/small_margin"
            android:textColor="@color/dark_grey_color"
            android:text="01"/>


        <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
            android:id="@+id/date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:textColor="@color/dark_grey_color"
            android:text="03 Nov,2019"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
               android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textColor="@color/dark_grey_color"
                android:text="Madhapur"/>

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                android:id="@+id/co_ordinates_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/latlng_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="17.45446,83.23234"
                android:textColor="@color/dark_grey_color"
                android:textSize="@dimen/very_small_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/locationLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/shadow_oval"
                >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_histoty_placeholder"
           />

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>



</LinearLayout>