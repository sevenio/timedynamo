<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleitem_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <LinearLayout
        android:id="@+id/attend_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#949494"
                android:textSize="@dimen/normal_text" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/_underscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/start_time"
                android:text="  -  "
                android:textColor="#949494" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/check_out_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/_underscore"
                android:gravity="center"
                android:textColor="#949494"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/employee_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attend_time"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Date : "
                android:textColor="#252525"
                android:textSize="@dimen/normal_text" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/employee_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/padding"
                android:text="TS111"
                android:textColor="#939393"
                android:textSize="@dimen/normal_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:padding="2dp"
                android:textColor="#656565"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employee_details"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Late"
                android:textColor="#8bd5ab"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>