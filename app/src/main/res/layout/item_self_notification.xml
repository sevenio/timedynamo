<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="#1A000000"
            app:layout_constraintBottom_toTopOf="@id/iv_type"
            app:layout_constraintEnd_toEndOf="@id/iv_type"
            app:layout_constraintStart_toStartOf="@id/iv_type"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:src="@drawable/ic_check_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/dm_sans"
            android:textSize="14sp"
            tools:text="check out"
            android:textColor="@color/black_color"
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@id/iv_type"
            app:layout_constraintStart_toEndOf="@id/iv_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_type"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="35dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_subtitle"
            tools:text="anmema djfadf"
            android:textColor="#CC000000"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"

            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintEnd_toStartOf="@id/tv_time"
            app:layout_constraintBottom_toTopOf="@id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/dm_sans"
            tools:text="anmema djfadf"
            android:textColor="#CC000000"
            android:layout_marginEnd="20dp"
            android:textSize="12sp"
            android:id="@+id/tv_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_time"
            android:id="@+id/line"
            android:layout_marginBottom="10dp"
            android:background="#1A000000"

            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="#1A000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_type"
            app:layout_constraintStart_toStartOf="@id/iv_type"
            app:layout_constraintTop_toBottomOf="@id/iv_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
