<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:padding="@dimen/margins"
    android:background="@drawable/attendance_row_bg"
    android:layout_height="wrap_content">
<TextView
    android:fontFamily="@font/poppins_regular"
    android:id="@+id/tvTeamMemberName"
    android:textSize="@dimen/medium_text"
    android:textColor="@color/colorPrimary"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="@dimen/defult_spacing"
        android:layout_marginLeft="@dimen/defult_spacing"
        android:layout_marginEnd="@dimen/defult_spacing"
        android:layout_marginRight="@dimen/defult_spacing"
        app:layout_constraintTop_toBottomOf="@+id/tvTeamMemberName"
        android:id="@+id/tvNotificationType"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/text_color_team"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="@dimen/defult_spacing"
        android:layout_marginLeft="@dimen/defult_spacing"
        android:layout_marginEnd="@dimen/defult_spacing"
        android:layout_marginRight="@dimen/defult_spacing"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationType"
        android:id="@+id/tvNotificationData"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/textDefultColor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationData"
        android:id="@+id/tvNotificationTime"
        android:textSize="@dimen/small_text"
        android:textColor="@color/notification_page_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>