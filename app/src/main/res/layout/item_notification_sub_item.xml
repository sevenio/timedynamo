<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notification_bg2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="@dimen/notification_comment_user_pic"
        android:layout_height="@dimen/notification_comment_user_pic"
        android:layout_margin="@dimen/notification_defult_space"
        android:background="@drawable/user_img_rounded_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userPic"
        android:orientation="vertical"
        android:padding="@dimen/notification_defult_space">

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koti Says"
            android:textColor="@color/notification_title_color"
            android:textSize="@dimen/notification_small_text_size" />

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/userComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello world"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notification_normal_text_size" />
    </LinearLayout>
</RelativeLayout>