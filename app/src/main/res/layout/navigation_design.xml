<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rr_navigate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg_color">


    <LinearLayout
        android:id="@+id/ll_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/very_large_margin"
        android:background="@color/menu_bg_color"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/profile_image_size"
                    android:layout_height="@dimen/profile_image_size"
                    android:layout_gravity="center"
                    android:padding="@dimen/nav_defult_padding"
                    android:src="@drawable/ic_user_avatar_defualt" />
            </FrameLayout>

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                android:id="@+id/employeeName"
                style="@style/navMenuItemLable"
                android:text="Mounika" />
            <!--  <TextView
                  android:id="@+id/employeeEmail"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  android:text="mounika@gmail.com"
                  android:textColor="@color/white_color"
                  android:textSize="@dimen/medium_text"/>-->

        </LinearLayout>

        <View
            android:id="@+id/dashBoardLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_color" />

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/dashBoardLayout"
            style="@style/navMenuItem">

            <ImageView
                android:id="@+id/dashBoardImage"
                style="@style/navMenuItemIcon"
                android:src="@drawable/dashboard" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                android:id="@+id/dashBoard"
                style="@style/navMenuItemLable"
                android:text="Dashboard" />


        </LinearLayout>

        <View
            android:id="@+id/attendanceLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_color" />

        <LinearLayout
            android:layout_gravity="center"

            android:id="@+id/attendanceLayout"
            style="@style/navMenuItem">

            <ImageView
                android:id="@+id/attendanceImage"
                style="@style/navMenuItemIcon"
                android:src="@drawable/ic_calender" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                android:id="@+id/attendance"
                style="@style/navMenuItemLable"
                android:text="Attendance" />


        </LinearLayout>

        <View
            android:id="@+id/requestsLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_color" />

        <LinearLayout
            android:layout_gravity="center"

            android:id="@+id/requestLayout"
            style="@style/navMenuItem">

            <ImageView
                android:id="@+id/requestImg"
                style="@style/navMenuItemIcon"
                android:background="@drawable/ic_request" />

            <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
                android:id="@+id/liveTrackingTitle"
                style="@style/navMenuItemLable"
                android:text="Requests" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_color" />

    </LinearLayout>




    <TextView
        android:id="@+id/tv_privacy_policy"
        android:padding="@dimen/padding"
        style="@style/navMenuItemLable"
        android:layout_above="@id/line"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/logoutLayout"
        android:background="@color/white_color" />


    <LinearLayout
        android:id="@+id/logoutLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logoutImage"
            style="@style/navMenuItemIcon"
            android:background="@drawable/ic_logout" />


        <com.tvisha.trooptime.activity.activity.customViews.PoppinsRegularTextView
            android:id="@+id/logout"
            style="@style/navMenuItemLable"
            android:padding="5dp"
            android:text="Logout" />
    </LinearLayout>


</RelativeLayout>



