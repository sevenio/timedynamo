<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margins"
    android:layout_marginRight="@dimen/margins"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:gravity="center_vertical"
            android:padding="@dimen/padding"
            android:text="From"
            android:textColor="#293b5a"
            android:textSize="@dimen/small_text" />

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/tv_from_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins"
            android:layout_toRightOf="@+id/text_from"
            android:padding="@dimen/padding"
            android:textSize="@dimen/small_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/text_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:gravity="center_vertical"
            android:padding="@dimen/padding"
            android:text="To"
            android:textColor="#293b5a"
            android:textSize="@dimen/small_text" />

        <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
            android:id="@+id/tv_to_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins"
            android:layout_toRightOf="@+id/text_to"
            android:padding="@dimen/padding"
            android:textSize="@dimen/small_text" />
    </RelativeLayout>

    <com.tvisha.trooptime.activity.activity.customViews.PoppinsTextView
        android:id="@+id/tv_permission_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/margins"
        android:layout_toRightOf="@+id/text_duration"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:text="  Submit  "
        android:textColor="@android:color/white" />
</LinearLayout>